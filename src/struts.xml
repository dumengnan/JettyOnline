<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	
	<!-- 将Action的创建交给spring来管理 -->  
    <constant name="struts.objectFactory" value="spring" />  
    
	<constant name="struts.enable.DynamicMethodInvocation" value="true" /> 
	<!-- 更改struts2请求Action的后缀名，默认为action。若想去掉后缀，设为","即可 -->
	<constant name="struts.action.extension" value=","></constant>

    <!-- 设置文件上传的大小为200M,默认２Ｍ -->
    <constant name="struts.multipart.maxSize" value="209715200" />


	<package name="struts2" namespace="/" extends="struts-default,json-default">
	
	 <interceptors>	
		 <interceptor-stack name="mydefault">
		 <interceptor-ref name="defaultStack"/>
		 <interceptor-ref name="json"/>
		 </interceptor-stack>
     </interceptors>

<default-interceptor-ref name="mydefault"/>
        <!--用户注册登录-->
		<action name="userlog"
						 class="userAction" method="Def">
		<result name="success" type="json">
			<param name = "root">dataMap</param>
	    </result>

			<result name="nouser" type="httpheader">
				<param name="status">403</param>
			</result>

			<result name="errorpass" type="httpheader">
					<param name="status">401</param>
			</result>

			<result name="invalid" type="httpheader">
				<param name="status">201</param>
			</result>

			<result name="error" type="httpheader">
				<param name="status">400</param>
			</result>
		</action>

        <!--商品分类-->
		<action name="category"
				class="categoryAction" method="listCategory">
			<result name ="success" type="json">
				<param name = "root">categoryMap</param>
			</result>
			<result name="error" type="httpheader">
				<param name="status">400</param>
			</result>
		</action>

        <!--产品图片视频信息-->
		<action name="img"
				class="com.jetty.action.GetImageAction">
			<result name="IMG" type="stream">
				<param name="contentType">image/jpeg</param>
				<param name="inputName">imageStream</param>
				<param name="contentDisposition">filename="photo.jpg"</param>
				<param name="bufferSize">1024</param>
			</result>
			<result name="MP4" type="stream">
				<param name="contentType">video/mp4</param>
				<param name="inputName">imageStream</param>
				<param name="contentDisposition">filename="video.mp4"</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>

        <!--上传下载-->
		<action name="binary" class="Binary">
			<result name="ADD" type="json">
				<param name="root">dataMap</param>
			</result>
			<result name="GET" type="stream">
				<!-- param name="contentType">text/html</param-->
				<param name="inputName">inputStream</param>
				<param name="bufferSize">2048</param>
			</result>
			<result name="error" type="httpheader">
				<param name="status">400</param>
			</result>
		</action>

        <!--产品讲座-->
        <action name="lecture" class="Lecture"
                method="getLecture">
            <result name="success" type="json">
                    <param name="root">lectureDataMap</param>
            </result>
            <result name="error" type = "httpheader">
                <param name="status">400</param>
            </result>
        </action>

		<!-- 有奖体验-->
		<action name="practise"  class="Practise">
			<result name="list" type="json">
				<param name="root">data1Map</param>
			</result>
			<result name="result" type="json">
				<param name="root">data2Map</param>
			</result>
			<result name="success" type="httpheader">
				<param name="status">200</param>
			</result>
			<result name="error" type="httpheader">
				<param name="status">400</param>
			</result>
		</action>

	</package>

	<!-- 包含的配置文件 -->
</struts>
