<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.jetty.beans">
    <class name="Detail" table="product_detail">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
        </id>

        <property name="name" column="name" type="java.lang.String"
                  not-null="true" length="40"></property>
        <property name="price" column="price" type="java.lang.Float"
                  not-null="true" length="10" ></property>
        <property name="weight" column="weight"  type="java.lang.Float"
                  not-null="true" length="10"></property>
        <property name="color" column="color" type="java.lang.String"
                  length="20" ></property>
        <property name="brand" column="brand" type="java.lang.String"
                  length="20"></property>
        <property name="other" column="other" type="java.lang.String"
                  length="40"></property>
    </class>
</hibernate-mapping>