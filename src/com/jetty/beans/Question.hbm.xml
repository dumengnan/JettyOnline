<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.jetty.beans">
        <class name="Question" table="product_question">

            <id name="id" type="java.lang.Integer"><column name="id" />
                <generator class="native"></generator>
            </id>

            <property name="question" column="question" type="java.lang.String"
                      length="25"></property>
            <property name="answer" column="answer" type="java.lang.String"
                      length="150"></property>
            <property name="pid" type="java.lang.Integer"><column name="productid" /></property>

        </class>
</hibernate-mapping>