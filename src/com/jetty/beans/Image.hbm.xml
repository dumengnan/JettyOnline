<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.jetty.beans">
    <class name="Image" table="product_image">

        <id name="id" type="java.lang.Integer"><column name="id" />
            <generator class="native"></generator>
        </id>

        <property name="imagename" column="imagename" type="java.lang.String"
                  length="20"></property>
        <property name="productid" type="java.lang.Integer"><column name="productid" /></property>

    </class>
</hibernate-mapping>