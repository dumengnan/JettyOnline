<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.jetty.beans">
    <class name="Description" table="product_description">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="native"></generator>
        </id>

        <property name="des" column="des" type="java.lang.String"
                  not-null="true" length="40" ></property>
        <property name="productid" column="productid" type="java.lang.Integer"
                length="11"></property>

    </class>
</hibernate-mapping>
